<h1>Listing polls</h1>

<table>
  <thead>
    <tr>
    </tr>
  </thead>

  <tbody>
    <div id="headerwrap">
      <div class="container">
      <div class="row">
        <div class="col-lg-7 col-lg-offset-2">
          <h1>Check out all the polls here.</h1>
          <h5>And vote on some, if you like.</h5>      
        </div>
      </div><!-- /row -->
      </div> <!-- /container -->
  </div><!-- /headerwrap -->
    <% @polls.each do |poll| %>
      <tr>
    
      
      <div style="text-align:center;">
        <p style="padding-top:30px;font-size:60px;"><%= poll.issue %></p>
        <p style="font-size:9px;">-<%= poll.dtime %></p>
      </div>
        <p><%= pie_chart({"For" => poll.upvotes, "Against" => poll.downvotes}) %></p>
          <div style ="text-align:center;">
          <%= link_to "Upvote ", increase_polls_path(:id => poll.id) %> 
        
         <%= link_to "Downvote", decrease_polls_path(:id => poll.id) %>
      </div>
         
        <p style="float:right;"><%= link_to 'Delete', poll, method: :delete, data: { confirm: 'Are you sure?' } %> </p>
      </tr>



    <% end %>
  </tbody>
</table>

<br>


